<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/mainBackgroundColor"
    tools:context="com.example.yasmindunsky.playground.Params">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.5"
        android:gravity="center"
        android:background="@color/yellowBackground">

        <TextView
            android:id="@+id/paramTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/paramTitle"
            android:textColor="@color/darkGreyBackground"
            android:textSize="27sp"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1">

        <ImageButton
            android:layout_width="0dp"
            android:id="@+id/incline"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:onClick="setIncline"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:src="@drawable/incline_choose_1"/>

        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:layout_weight="1" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.2">

        <TextView
            android:textColor="@color/redBackground"
            android:textSize="25sp"
            android:id="@+id/inclineTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/altitudeText"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <TextView
            android:textColor="@color/redBackground"
            android:textSize="25sp"
            android:id="@+id/distanceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lengthText"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </TableRow>

    <TableRow
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.4"
        android:background="@color/mainBackgroundColor">
    </TableRow>

    <TableRow
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.2"
        android:background="@color/lightBackgroundColor">


        <TextView
            android:textColor="@color/redBackground"
            android:textSize="25sp"
            android:id="@+id/prefText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/prefText"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </TableRow>

    <TableRow
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1.5"
        android:background="@color/lightBackgroundColor">

        <Button
            android:layout_width="0dp"
            android:id="@+id/water"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:onClick="waterSelection"
            android:background="@drawable/water_background_selector"
            />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/stairs"
            android:onClick="stairSelection"
            android:background="@drawable/stairs_background_selector" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:onClick="parkSelection"
            android:background="@drawable/parks_background_selector"
            android:id="@+id/parks" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/send"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="0dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:src="@drawable/find_routes_button" />

    </TableRow>


</LinearLayout>