<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackgroundColor"
    android:orientation="vertical"
    tools:context="com.example.yasmindunsky.playground.Params">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.5"
        android:background="@color/yellowBackground"
        android:gravity="center">

        <TextView
            android:id="@+id/paramTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/paramTitle"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/darkGreyBackground"
            android:textSize="27sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/incline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:onClick="setIncline"
            android:scaleType="fitCenter"
            android:src="@drawable/incline_choose_1" />

        <NumberPicker
            android:id="@+id/numberPicker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:theme="@style/AppTheme" />


    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.2">

        <TextView
            android:id="@+id/inclineTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/altitudeText"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/redBackground"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/distanceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lengthText"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/redBackground"
            android:textSize="25sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.4"
        android:background="@color/mainBackgroundColor"
        android:gravity="center"></TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.2"
        android:background="@color/lightBackgroundColor"
        android:gravity="center">


        <TextView
            android:id="@+id/prefText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/prefText"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/redBackground"
            android:textSize="25sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1.5"
        android:background="@color/lightBackgroundColor"
        android:gravity="center">

        <ImageButton
            android:id="@+id/water"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:onClick="waterSelection"
            android:scaleType="fitCenter"
            android:src="@drawable/water_background_selector" />

        <Button
            android:id="@+id/stairs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/stairs_background_selector"
            android:onClick="stairSelection" />

        <Button
            android:id="@+id/parks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/parks_background_selector"
            android:onClick="parkSelection" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/send"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:onClick="sendData"
            android:scaleType="fitCenter"
            android:src="@drawable/find_routes_button" />

    </TableRow>


</LinearLayout>