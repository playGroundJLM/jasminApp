<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.yasmindunsky.playground.MainActivity">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="2.4"
        android:background="@color/mainBackgroundColor">>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="getSelection"
            android:src="@drawable/main_object_1"
            android:background="@color/mainBackgroundColor"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"
            android:layout_weight="1"
            />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.4"
        android:background="@color/mainBackgroundColor">>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHOOSE YOUR CITY WORKOUT"
            android:textColor="@color/redBackground"
            android:textSize="27dp"
            android:textAlignment="center"
            android:id="@+id/Chooseline"
            android:adjustViewBounds="true"
            android:layout_weight="1"
            />
    </TableRow>




    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:background="@color/mainBackgroundColor">>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="getSelection"
            android:src="@drawable/run_icon"
            android:id="@+id/run"
            android:background="@color/mainBackgroundColor"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_weight="1"
            android:layout_margin="3dp"
            />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:background="@color/mainBackgroundColor">


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="getSelection"
            android:src="@drawable/bike_icon"
            android:background="@color/mainBackgroundColor"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_weight="1"
            android:id="@+id/bicycle"
            android:layout_margin="3dp"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:background="@color/mainBackgroundColor">>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="getSelection"
            android:src="@drawable/power_icon"
            android:background="@color/mainBackgroundColor"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_weight="1"
            android:id="@+id/power"
            android:layout_margin="3dp"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1.1"
        android:background="@color/mainBackgroundColor">>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="getSelection"
            android:src="@drawable/main_object_2"
            android:background="@color/mainBackgroundColor"
            android:scaleType="fitEnd"
            android:adjustViewBounds="true"
            android:layout_weight="0.8"
            />
    </TableRow>
</LinearLayout>
